#include<stdio.h>
void main()
{
	char str[20];
	int i,c1=0,c2=0,c3=0;
	printf("enter the string:");
	gets(str);
	for(i=0;str[i]!='\0';i++)
	{
		if(isupper(str[i]))
		{
			c1=c1+1;
		}
		else
		if(islower(str[i]))
		{
			c2=c2+1;
		}
		else
		if(isdigit(str[i]))
		{
			c3=c3+1;
		}
}
     printf("\nuppercase characters=%d",c1);
	 printf("\nlowercase characters=%d",c2);
	 printf("\nncount of digits=%d",c3);
}
	 
	  
